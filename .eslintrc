{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:promise/recommended"
  ],
  "plugins": ["react", "import", "jsx-a11y", "react-hooks", "promise"],
  "rules": {
    "react/prop-types": ["warn", 0],
    "indent": ["warn", 2],
    "linebreak-style": ["warn", 0],
    "quotes": ["warn", "double"],
    "react/jsx-curly-brace-presence" : "warn",
    "react/jsx-curly-newline" : "warn",
    "react-hooks/rules-of-hooks": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "promise/always-return": "warn"

  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
